<div class="article-div">
  <form action="/article/create" method="post">
    <div><span class="article-property">Title:</span><input type="text" name="title" id="article-title" required></div>
    <span class="article-property">A really cool post:</span><textarea  maxlength="6000" name="bodyText" id="article-body" cols="50" rows="40" required></textarea>
    <input id="publish-article" type="submit" value="Publish Masterpiece">
  </form>
</div>