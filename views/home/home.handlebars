{{#each users}}
  <div class="user-content">
    <div class="user-profile">
      <a class="user-profile-picture" href="user/profile/{{this._id}}">
        <img class="profile-picture" src="{{this.avatar}}"/>
      </a>
      <a href="user/profile/{{this._id}}">{{this.username}}</a>
    </div>
    <div class="user-posts">
      {{#each this.articles}}
        <div class="user-article">
          <div class="user-article-title">
            <a class="article-title-link"
              href="article/details/{{this._id}}">
              <abbr title="{{this.title}}">{{truncTitle this.title}}</abbr>
            </a>
          </div>
          <div class="article-body">{{truncBody this.bodyText}}</div>
        </div>
        {{else}}
      <p>This user has no posts yet.</p>        
      {{/each}}
    </div>
  </div>
{{/each}}