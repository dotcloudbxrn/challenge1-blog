<div class="main-user-profile">
  <p id="profile-pic"><img id="profile-pic-image" src="/images/default-profile-pic.jpg"></p>
  <div id="profile-descr">
    {{#sameUser currentUser._id user._id}}
      <a href="/user/edit-profile/{{user._id}}">Edit your profile</a>
    {{/sameUser}}
    <p id=""><span class="profile-label">Username: </span> {{user.username}}</p>
    <p id="profile-name"><span class="profile-label">Name: </span> {{user.firstName}} {{user.lastName}}</p>
    <p><span class="profile-label">A short introduction: </span></p>
    <p id="profile-bio"> {{user.bio}} </p>
    <p><span class="profile-label">{{possessive user.username}} articles: </span><a href="#" id="profile-articles-link">Click!</span></p>
  </div>
</div>